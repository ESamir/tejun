# check search
# now the research result of "my_test" should be empty
# from the result, we can see its empty.
#----------------------------------------------------------------
[generaluser@centos7 ~]$ curl -uelastic:changeme -XGET http://localhost:9200/my_test/_search?pretty
{
  "error" : {
    "root_cause" : [
      {
        "type" : "index_not_found_exception",
        "reason" : "no such index",
        "resource.type" : "index_or_alias",
        "resource.id" : "my_test",
        "index_uuid" : "_na_",
        "index" : "my_test"
      }
    ],
    "type" : "index_not_found_exception",
    "reason" : "no such index",
    "resource.type" : "index_or_alias",
    "resource.id" : "my_test",
    "index_uuid" : "_na_",
    "index" : "my_test"
  },
  "status" : 404
}


# put data again
#----------------------------------------------------------------
[generaluser@centos7 ~]$ curl -uelastic:changeme -XPUT http://localhost:9200/my_test/doc/1?pretty -d '{"title":"aaa"}'
{
  "_index" : "my_test",
  "_type" : "doc",
  "_id" : "1",
  "_version" : 1,
  "result" : "created",
  "_shards" : {
    "total" : 2,
    "successful" : 1,
    "failed" : 0
  },
  "created" : true
}


# search again
# now the result should not be empty
# from the result, we can see it returns 1 hit.
#----------------------------------------------------------------
[generaluser@centos7 ~]$ curl -uelastic:changeme -XGET http://localhost:9200/my_test/_search?pretty
{
  "took" : 129,
  "timed_out" : false,
  "_shards" : {
    "total" : 5,
    "successful" : 5,
    "failed" : 0
  },
  "hits" : {
    "total" : 1,
    "max_score" : 1.0,
    "hits" : [
      {
        "_index" : "my_test",
        "_type" : "doc",
        "_id" : "1",
        "_score" : 1.0,
        "_source" : {
          "title" : "aaa"
        }
      }
    ]
  }
}


